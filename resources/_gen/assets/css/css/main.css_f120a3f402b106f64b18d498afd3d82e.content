body {
  background-color: #1a1a1a;
  color: #e0e0e0;
  font-family: Georgia, serif;
  line-height: 1.5;
  margin: 1rem;
  max-width: 768px; }

header {
  border-bottom: 1px solid #4a4a4a;
  margin-bottom: 1rem; }

footer {
  border-top: 1px solid #4a4a4a;
  margin-top: 1rem; }

a {
  color: #900;
  text-decoration: none; }

a:hover {
  color: #c00; }
